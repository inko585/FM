<ae:AEWindow x:Class="AE.Graphics.Wpf.View.AESelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AE.Graphics.Wpf.View"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="350"
             
             SizeToContent="WidthAndHeight"
             
             xmlns:ae="clr-namespace:AE.Graphics.Wpf"
             
             Title="{Binding Path=Title}" ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary Source="pack://application:,,,/AE.Graphics.Wpf;component/Styles/AEStyles.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Content="{Binding Path=SelectionTitle}" FontSize="14" Margin="5,0,0,0"/>
            <Separator Margin="10,0,10,0"/>

            <ItemsControl ItemsSource="{Binding Path=SelectionItems}" >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Margin="5"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </StackPanel>

        <!-- Button Row -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="75" />
            </Grid.ColumnDefinitions>

            <Button Content="Ok" Command="{Binding OkButtonCommand}" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,5,0" IsDefault="True" Style="{DynamicResource AEFlatButtonStyle}"/>

        </Grid>
    </Grid>
</ae:AEWindow>
